<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="app.mobile.examwarrior.ui.activity.RegistrationActivity">

    <app.mobile.examwarrior.widget.AspectRatioImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:aspectRatio="0.3"
        app:aspectRatioEnabled="true"
        app:dominantMeasurement="width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registration_viewpager"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/imgpsh_fullsize" />


    <app.mobile.examwarrior.widget.LockableViewPager
        android:id="@+id/registration_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>

