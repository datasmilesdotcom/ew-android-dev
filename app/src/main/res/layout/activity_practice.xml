<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <app.mobile.examwarrior.widget.widgets.SlidingTabLayout
        android:id="@+id/home_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:elevation="2dp"
        app:indicatorColor="#657897"
        app:shouldExpand="true"
        app:tabBackgroundP="@layout/question_tab_nmber"
        app:tabBackgroundTextViewId="@+id/home_tab_textview" />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/home_tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        />

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/initial_feed_progress"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:padding="3dp"
        android:visibility="gone" />
</RelativeLayout>
