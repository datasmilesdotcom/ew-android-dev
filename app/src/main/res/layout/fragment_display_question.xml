<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/exo_edit_mode_background_color"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">

            <WebView
                android:id="@+id/questions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_ans1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/dummy_tool"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkOpt1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/hex_1"
                    android:theme="@style/MyCheckBox"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgAns1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hex_1" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/option_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="1. Option one will be placed here." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ans2"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dummy_tool"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkOpt2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:theme="@style/MyCheckBox"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgAns2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hex_2" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/option_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="2. Option two will be placed here." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ans3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dummy_tool"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkOpt3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgAns3"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hex_3" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/option_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="3. Option three will be placed here." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ans4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dummy_tool"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkOpt4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyCheckBox"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgAns4"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hex_4" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/option_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="4. Option four will be placed here."
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>