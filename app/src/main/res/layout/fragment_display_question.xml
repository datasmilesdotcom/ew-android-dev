<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.mobile.examwarrior.ui.fragments.DisplayQuestionFragment">

        <WebView
            android:id="@+id/questions_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/options"
            android:padding="3dp"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/options"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:minHeight="300dp"
            android:elevation="3dp"
            app:cardBackgroundColor="#FFFDE7"
            app:cardCornerRadius="4dp">

            <WebView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/laTexView"
                android:layout_width="match_parent"
                android:minHeight="300dp"
                app:cardBackgroundColor="#FFFDE7"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/option_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dummy_tool"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="1. Option one will be placed here."
                android:visibility="visible" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/option_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dummy_tool"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="2. Option two will be placed here."
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/option_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dummy_tool"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="3. Option three will be placed here."
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/option_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dummy_tool"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="4. Option four will be placed here."
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>