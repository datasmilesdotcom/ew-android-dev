<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    android:paddingBottom="52dp">

    <app.mobile.examwarrior.widget.AspectRatioImageView
        android:id="@+id/cloude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:aspectRatio="0.5"
        app:aspectRatioEnabled="true"
        app:dominantMeasurement="width"
        app:srcCompat="@drawable/clouds" />

    <app.mobile.examwarrior.widget.AspectRatioImageView
        android:id="@+id/forest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        app:aspectRatio="0.55"
        app:aspectRatioEnabled="true"
        app:dominantMeasurement="width"
        app:srcCompat="@drawable/bkg_" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logo_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:rotation="-25"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/apple_intro" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/logo_intro" />
        </LinearLayout>

        <app.mobile.examwarrior.widget.CustomFontTextView
            android:id="@+id/text_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/intro_text_margin"
            android:gravity="center"
            android:padding="10dp"
            android:text="we make learning easy, interesting, fun and faster"
            android:textColor="#fff"
            android:textSize="@dimen/intro_text_size"
            android:textStyle="bold"
            app:textAllCaps="true"
            app:tv_customFont="@string/font_GothamRndBold" />
    </LinearLayout>
</FrameLayout>